
<div class="vh-100 text-center mb-3 backimg" style="background-color:white; "><h2 style="color:orange;">Forgot your password?</h2>
<div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: {turbo: :false} }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div><br>

  <div class="actions" style="margin-right:400px">
    <%= f.submit "Send me reset password instructions",class:"text1" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
