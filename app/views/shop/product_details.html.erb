<body>	
	<section>
		<div class="container">
			<div class="row">
				<div class="col-sm-3">
					<div class="left-sidebar">
						<h2>Category</h2>
						<div class="panel-group category-products" id="accordian"><!--category-productsr-->
							<div class="panel panel-default">
								<div class="panel-heading" style="height: 300px;">
									<h4 class="panel-title">
									<a data-toggle="collapse" data-parent="#accordian" href="#sportswear">
										<span class="badge pull-right"><i class="fa fa-plus"></i></span>
										<%= @category.each do |category| %>
										<h2 ><%= category.name  %></h2>
										<h4><% subcatagories = category.subcategories%></h4>
										<% subcatagories.each do |subcat| %>
										<h4 class="ma"><%= link_to subcat.name,product_details_path(subcat) %></h4><br>
										<% end %>
										<% end %>
										</a>
									</h4>
								</div>
								
							</div>
						</div><!--/category-products-->
			
					</div>
				</div>
				
				<div class="col-sm-9 padding-right">
					<div class="product-details"><!--product-details-->
						<div class="col-sm-5">
							<% @products.each do|product|%>
							<div class="view-product">
						
								<%= image_tag(product.product_images.first.image ) %>
							
							</div>
							
						</div>
						<div class="col-sm-7">
							<div class="product-information"><!--/product-information-->
								<%= image_tag("product-details/new.jpg", alt: "") %>
								<h2><%= product.name %></h2>
								<p>Web ID: 1089772</p>
								
								<span>
									<span>$<%= product.price %></span>
									<label>Quantity:</label>
									<input type="text" value="1" />
									<button type="button" class="btn btn-fefault cart">
										<%= button_to "cart", add_to_cart_path(product) %>
									</button>
								</span>
								<p><b>Availability:</b> In Stock</p>
								<p><b>Condition:</b> New</p>
								<p><b>Brand:</b> E-SHOPPER</p>
								<button style="margin-top:20px;background-color: orange;"><%= link_to "For More Products", shop_shopee_path %></button>
						
							</div><!--/product-information-->
						</div>
					</div><!--/product-details-->
					<% end %>
						</div>
					</section>
				
	

	
	</body>
