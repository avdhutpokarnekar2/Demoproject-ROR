<body>	 
	 <div id="contact-page" class="container">
    	<div class="bg">
	    	<div class="row">    		
	    		<div class="col-sm-12">    			   			
					<h2 class="title text-center">Contact <strong>Us</strong></h2>  
					<ul>
					<li>Name:<%= @cont.name %></li>
					<li>Email:<%= @cont.email %></li>
					<li>Contact_no:<%= @cont.contact_no %></li>
					<li>Message:<%= @cont.message %></li>
					<li>Admin_note:<%= @cont.note_admin %>  </li>
				</ul>
				</div>			 		
			</div>  

			<div>  	
			<div class="col-sm-4">
	    	<h2 class="title text-center">Get In Touch</h2>
	    	<%= form_with model: @contact, url: shop_contact_us_path,method: :post, local: true do |form| %>
					<div class="field">
    			<%= form.label :name %><br>
					<%= form.text_field :name %><br>
					<%= form.label :email %><br>
					<%= form.email_field :email %><br>
					<%= form.label :contact_no %><br>
					<%= form.text_field :contact_no %><br>
					<%= form.label :message %><br>
					<%= form.text_field :message %><br>
					<div class="actions">
    			<br><%= form.submit %>
    			<% if @msgg.present? %>
                <p style="color: greenyellow;"><%= @msgg %>
              <% end %>
  				</div>
				<% end %>
			</div>
		</div>
	    		<div class="col-sm-6">
	    			<div class="contact-info">
	    				<h2 class="title text-center">Contact Info</h2>
	    				<address>
	    					<p>E-Shopper Inc.</p>
							<p>935 W. Webster Ave New Streets Chicago, IL 60614, NY</p>
							<p>Newyork USA</p>
							<p>Mobile: +2346 17 38 93</p>
							<p>Fax: 1-714-252-0026</p>
							<p>Email: info@e-shopper.com</p>
	    				</address>
	    				<div class="social-networks">
	    					<h2 class="title text-center">Social Networking</h2>
							<ul>
								<li>
									<a href="shop/index"><%= image_tag("social/instagram.png", alt: "") %><i class="fa fa-google-plus"></i></a>
								</li>
								<li>
									<a href="#"><%= image_tag("social/fb.png", alt: "") %><i class="fa fa-twitter"></i></a>
								</li>
						<!-- 		<li>
									<a href="#"><%= image_tag("social/twitt.png", alt: "")%><i class="fa fa-facebook"></i></a><i class="fa fa-youtube"></i></a>
								</li>
								 -->
							</ul>
	    				</div>
	    			</div>
    			</div>    			
	    	</div>  
    	</div>	
    </div>
</div>
    </div><!--/#contact-page-->
	
	
</body>
</html>