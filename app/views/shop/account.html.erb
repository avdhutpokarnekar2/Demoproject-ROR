    <h3>Mobile no</h3><%= form.text_field :mobile_no, required: true, class: 'form-control', value:user.mobile_no %>
    <h3>Email</h3><%= form.text_field :email, required: true, class: 'form-control', value:user.email %>
	<% end %>
	<br>
	<div class="actions" >
    <%= form.submit %>
 </div><br>
