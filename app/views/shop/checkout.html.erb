<body>
	<section id="cart_items">
		<div class="container">
			<div class="register-req">
				<p>Please use Register And Checkout to easily get access to your order history, or use Checkout as Guest</p>
			</div><!--/register-req-->
			<div><h3>Address:-<%= @address.Address %></div>
			<div><h3>Pin-Code:-<%= @address.pin_code %></div>
			<div><h3>Country:-<%= @address.Country %></div>
			<div><h3>State:-<%= @address.State %></div>
			<div><h3>Mobile-no.:-<%= @address.mobile_no %></div>
			<div><h3>Alternate mobile no.:-<%= @address.Alternate_mobile_no %></div>
			<div>
      <div><input type="submit" name="change" value="Change Address" onclick="document.getElementById('my_id').style.display = 'block' ;"></div>
			<div id="my_id", style="display: none">

<div class="row mt-3 mx-3" style="margin-top:25px ;">
  <div class="col-md-3">
    <div style="margin-top: 50px; margin-left: 10px;" class="text-center">
      <i id="animationDemo" data-mdb-animation="slide-right" data-mdb-toggle="animation"
        data-mdb-animation-reset="true" data-mdb-animation-start="onScroll"
        data-mdb-animation-on-scroll="repeat" class="fas fa-3x fa-shipping-fast text-white"></i>
      <h3 class="mt-3 text-white">Welcome</h3>
      <p class="white-text">You are 30 seconds away from compleating your order!</p>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-white btn-rounded back-button">Go back</button>
    </div>
  </div>
  <div class="col-md-9 justify-content-center">
    <div class="card card-custom pb-4">
      <div class="card-body mt-0 mx-5">
        <div class="text-center mb-3 pb-2 mt-3">
          <h4 style="color: #495057 ;">Delivery Details</h4>
        </div>
        <div class="field">
					<%= form_with model: @useraddress, url:shop_create_path, method: :post, local: true do |form| %>
          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
                <%= form.label :first_Name %>
								<%= form.text_field :fname %>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <%= form.label :Last_Name %>
								<%= form.text_field :lname %>
              </div>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
                <%= form.label :Address %>
								<%= form.text_field :Address %>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
               	<%= form.label :Pin_code %>
								<%= form.number_field :pin_code %>
              </div>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
             		<%= form.label :Alternate_mobile_no%>
  							<%= form.number_field :Alternate_mobile_no %>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <%= form.label :mobile_no %>
  							<%= form.number_field :mobile_no %>
              </div>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
                <%= form.select :Country, options_for_select( [['INDIA','INDIA'],['BRAZIL','BRAZIL'],['RASSIA','RASSIA'],['AMERICA','AMERICA']])%>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <%= form.select :State, options_for_select( [['MAHARASHTRA','MAHARASHTRA'],['GOA','GOA'],['DELHI','DELHI'],['PANJAB','PANJAB']])%>
  						</div>
            </div>
          </div>

          <div class="float-end ">
           <div class="actions">
    					<%= form.submit %>
  					</div>
							<% end %>
          </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
</div>
			
		<h2>Review & Payment</h2>
			</div>
				<tbody>
						<tr>
							<td colspan="4">&nbsp;</td>
							<td colspan="2">
								<table class="table table-condensed total-result">
									<tr>
										<td>Cart Sub Total</td>
										<td>$<%= @value %></td>
									</tr>
									<tr>
										<td>Exo Tax</td>
										<td>-</td>
									</tr>
									<tr class="shipping-cost">
										<td>Shipping Cost</td>
										<td><%= @ship %></td>										
									</tr>
									<tr>
										<td>Total</td>
										<td><span><%= @value %></span></td>
									</tr>
								</table>
							</td>
						</tr>
					</tbody>
				</table>
			</div><br><br>
		<div class="payment-options">
		<span><%#= form_tag checkout_show_path do %>
			<%= button_to "Stripe",shop_stripe_path %>
			<%# end %></span><br>
			<%= button_to "COD",shop_cod_path ,method: :get %>
		
		</div>

		
	</section> 
	


  <script src="js/jquery.js"></script>
	<script src="js/bootstrap.min.js"></script>
  <script src="js/jquery.scrollUp.min.js"></script>
  <script src="js/jquery.prettyPhoto.js"></script>
  <script src="js/main.js"></script>

</body>
