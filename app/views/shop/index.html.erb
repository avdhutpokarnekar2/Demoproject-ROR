<body>
	<section id="slider"><!--slider-->
		<div class="container">
			<div class="row">
				<div class="col-sm-12">
					<div id="slider-carousel" class="carousel slide" data-ride="carousel">
						<ol class="carousel-indicators">
							<li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
							<li data-target="#slider-carousel" data-slide-to="1"></li>
							<li data-target="#slider-carousel" data-slide-to="2"></li>
						</ol>
						<% if @banners.any? %>
   						<% @banners.each do |post| %>
						<div class="carousel-inner">
							<div class="item active">
								<div class="col-sm-6">
									<h1><span>E</span>-SHOPPER</h1>
									<h2> Ecommerce Website</h2>
									<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. </p>
									
								</div>
								<div class="col-sm-6">
									<%= image_tag post.image  %>
									<%= image_tag("home/pricing.png") %>	
								</div>
								<% end %>
								<% end %>
							</div>
						</div>
						<a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
							<i class="fa fa-angle-left"></i>
						</a>
						<a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
							<i class="fa fa-angle-right"></i>
						</a>
					</div>
				</div>
			</div>
		</div>
	</section><!--/slider-->
	<section>
		<div class="container">
			<div class="row">
				<div class="col-sm-3">
					<div class="left-sidebar">
						<h2>Category</h2>
						<div class="panel-group category-products" id="accordian"><!--category-productsr-->
							<div class="panel panel-default">
								<div class="panel-heading">
									<h4 class="panel-title">
									<a data-toggle="collapse" data-parent="#accordian" href="#sportswear">
										<span class="badge pull-right"><i class="fa fa-plus"></i></span>
										<%= @category.each do |category| %>
										<h2 ><%= category.name  %></h2>
										<h4><% subcatagories = category.subcategories%></h4>
										<% subcatagories.each do |subcat| %>
										<h4 class="ma"><%= link_to subcat.name,product_details_path(subcat) %></h4><br>
										<% end %>
										<% end %>
										</a>
									</h4>
								</div>
								
							</div>
						</div><!--/category-products-->
					
						
					</div>
				</div>
		
        		<div class="col-sm-9 padding-right">
					<div class="features_items"><!--features_items-->
						<h2 class="title text-center">Features Items</h2>
						<% if @products.present? %>
            	<% @products.each do |prod| %>
						<div class="col-sm-4">
							<div class="product-image-wrapper">
								<div class="productinfo text-center">
									<%= image_tag(prod.product_images.first.image) %>
									<h2>$<%= prod.price %></h2>
									<p><%= prod.name %></p>
									<p> <%= prod.short_description %></p>
		            				<%= button_to "Add to cart", add_to_cart_path(prod) %>
		         				</div>
								<div class="choose">
									<ul class="nav nav-pills nav-justified" >
										<% if @wishlist_product.present? && @wishlist_product.include?(prod) %>
										<% else %>
										<span ><%= button_to "Add to Wishlist", add_to_wishlist_path(prod),class:"mrclass" %></span>
										<% end %>
									</ul>
								</div>

							</div>
						</div>
						<% end %>
						<% end %>
						<button style="margin-top:250px;background-color: orange;"><%= link_to "For More Products", shop_shopee_path %></button>
					</div>
				</div>
			</div>
		</div>
	</section>
</body>
</html>